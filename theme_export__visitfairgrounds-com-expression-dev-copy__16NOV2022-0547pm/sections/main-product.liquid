    "name": "Product details",
    "settings": [
      {
        "type": "select",
        "id": "description_position",
        "label": "Description position",
        "default": "",
        "options": [
          {
            "value": "",
            "label": "In right hand column"
          },
          {
            "value": "under",
            "label": "Below product images"
          }
        ]
      },
      {
        "type": "header",
