      {
        "type": "custom-liquid",
        "name": "Custom Liquid",
        "settings": [
          {
            "type": "liquid",
            "id": "custom_liquid",
            "label": "Custom Liquid"
          }
        ]
      },
      {
        "type": "description",
        "name": "Description",
        "limit": 1,
        "settings": [
          {
            "type": "paragraph",
            "content": "To show the product description here, select 'In right hand column' as the position in the 'Product details' settings"
          }
        ]
      },
      {
        "type": "divider",
        "name": "Divider"
      },
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "range",
            "id": "image_width",
            "min": 60,
            "max": 400,
            "step": 10,
            "unit": "px",
            "label": "Image width",
            "default": 400
          },
          {
            "type": "url",
            "id": "url",
            "label": "Link"
          }
        ]
